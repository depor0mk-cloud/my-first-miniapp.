<body>

    <div class="header">
        <div class="logo">HAKOS</div>
        <div id="username" style="font-size: 14px; opacity: 0.7;">–ó–∞–≥—Ä—É–∑–∫–∞...</div>
    </div>

    <div class="score-container">
        <div id="score">0</div>
        <div class="cps">–¥–æ–±—ã—á–∞: <span id="cps-val">0</span>/—Å–µ–∫</div>
    </div>

    <div class="click-area">
        <div class="circle-btn" id="main-click">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-2 2-10-10 10-10 2 2M15 6l5 5-5 5"/></svg>
        </div>
    </div>

    <div class="shop-panel">
        <div class="upgrade-card" id="buy-factory">
            <div class="upgrade-info">
                <div>üõí –ö—É–ø–∏—Ç—å –ó–∞–≤–æ–¥</div>
                <div id="factory-count">–£—Ä–æ–≤–µ–Ω—å: 0</div>
            </div>
            <div class="price" id="factory-price">50</div>
        </div>
    </div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();

        // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –∏–≥—Ä—ã
        let score = 0;
        let factories = 0;
        let factoryPrice = 50;

        // –≠–ª–µ–º–µ–Ω—Ç—ã
        const scoreEl = document.getElementById('score');
        const cpsEl = document.getElementById('cps-val');
        const factoryCountEl = document.getElementById('factory-count');
        const factoryPriceEl = document.getElementById('factory-price');
        const mainBtn = document.getElementById('main-click');

        // –ü–æ–∫–∞–∑–∞—Ç—å –∏–º—è
        if (tg.initDataUnsafe?.user) {
            document.getElementById('username').innerText = tg.initDataUnsafe.user.first_name;
        }

        // –û–±–ª–∞—á–Ω–æ–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ (Telegram Cloud Storage)
        function saveProgress() {
            const data = JSON.stringify({ score, factories, factoryPrice });
            tg.CloudStorage.setItem('save_game', data);
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
        tg.CloudStorage.getItem('save_game', (err, value) => {
            if (!err && value) {
                const saved = JSON.parse(value);
                score = saved.score || 0;
                factories = saved.factories || 0;
                factoryPrice = saved.factoryPrice || 50;
                updateUI();
            }
        });

        function updateUI() {
            scoreEl.innerText = Math.floor(score).toLocaleString();
            cpsEl.innerText = (factories * 2);
            factoryCountEl.innerText = `–£—Ä–æ–≤–µ–Ω—å: ${factories}`;
            factoryPriceEl.innerText = Math.floor(factoryPrice);
        }

        // –ö–ª–∏–∫
        mainBtn.addEventListener('click', (e) => {
            score += 1;
            updateUI();
            createFloatingText(e.clientX, e.clientY, "+1");
            saveProgress();
        });

        // –ü–æ–∫—É–ø–∫–∞ –∑–∞–≤–æ–¥–∞
        document.getElementById('buy-factory').addEventListener('click', () => {
            if (score >= factoryPrice) {
                score -= factoryPrice;
                factories += 1;
                factoryPrice *= 1.65; // –ò–Ω—Ñ–ª—è—Ü–∏—è
                updateUI();
                saveProgress();
            } else {
                tg.HapticFeedback.notificationOccurred('error');
            }
        });

        // –ê–≤—Ç–æ-–∫–ª–∏–∫ (–∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É)
        setInterval(() => {
            if (factories > 0) {
                score += (factories * 2);
                updateUI();
            }
        }, 1000);

        // –ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–æ–µ –∞–≤—Ç–æ-—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ (–∫–∞–∂–¥—ã–µ 10 —Å–µ–∫)
        setInterval(saveProgress, 10000);

        function createFloatingText(x, y, text) {
            const el = document.createElement('div');
            el.className = 'floating-text';
            el.innerText = text;
            el.style.left = `${x}px`;
            el.style.top = `${y}px`;
            document.body.appendChild(el);
            setTimeout(() => el.remove(), 800);
        }
    </script>
</body>
